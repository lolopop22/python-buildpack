#!/usr/bin/env bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4

# Prepend proper environment variables for Python use.
export PYTHONUNBUFFERED=1
export LANG=${LANG:-en_US.UTF-8}

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
source "$BUILDPACK_DIR/scripts/install_go.sh"
output_dir=$(mktemp -d -t supplyXXX)

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install rclone"
BUILD_DIR=$1
VENDOR_DIR="vendor"
FILE="rclone-current-linux-amd64"
DOWNLOAD_URL="https://downloads.rclone.org/$FILE.zip"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p rclone
cd rclone
wget -q $DOWNLOAD_URL
unzip -qqj $FILE.zip
rm -rf $FILE.zip

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/rclone.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/rclone"' >> $PROFILE_PATH

echo "-----> Running go build supply"
pushd $BUILDPACK_DIR
    #echo "------> Installing Rclone"
    #$GoInstallDir/go/bin/go get -v github.com/rclone/rclone
    $GoInstallDir/go/bin/go build -mod=vendor -o $output_dir/supply ./src/python/supply/cli
popd

$output_dir/supply "$BUILD_DIR" "$CACHE_DIR" "$DEPS_DIR" "$DEPS_IDX"
